<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/twitter"
        android:text="Favorite Twitter Searchers"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/twittersearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/twitter"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#808080"
        android:hint="Enter Twitter search query here"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/twitter_query"
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:layout_below="@id/twittersearch"
            android:layout_marginStart="10dp"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#808080"
            android:gravity="left"
            android:hint="Tag your query"
            android:orientation="horizontal"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <Button
            android:id="@+id/savebutton"
            android:layout_width="120dp"
            android:layout_height="65dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="10dp"
            android:background="#205E7A"
            android:gravity="center"
            android:text="Save"
            android:textColor="@color/white"/>
    </LinearLayout>
    <EditText
        android:layout_height="100dp"
        android:layout_width="800dp"
        android:text="Tagged Searches"
        android:textColor="@color/white"
        android:layout_marginTop="180dp"
        android:gravity="center"
        />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="1200dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="30dp"
        android:background="#205E7A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="185dp"
                    android:layout_height="match_parent"
                    android:text="AndroidFP"
                    android:background="#205E7A"/>
            <Button
                android:id="@+id/button11"
                android:layout_width="185dp"
                android:layout_height="match_parent"
                android:text="Edit"
                android:background="#205E7A"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button2"
                    android:layout_width="185dp"
                    android:layout_height="match_parent"
                    android:text="Google"
                    android:background="#205E7A"/>
                <Button
                    android:id="@+id/button22"
                    android:layout_width="185dp"
                    android:layout_height="match_parent"
                    android:text="Edit"
                    android:background="#205E7A"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button3"
                    android:layout_width="185dp"
                    android:layout_height="match_parent"
                    android:text="Deitel"
                    android:background="#205E7A"/>
                <Button
                    android:id="@+id/button33"
                    android:layout_width="185dp"
                    android:layout_height="match_parent"
                    android:text="Edit"
                    android:background="#205E7A"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="185dp"
                    android:layout_height="match_parent"
                    android:text="iPhoneFP"
                    android:background="#205E7A"/>
                <Button
                    android:id="@+id/button44"
                    android:layout_width="185dp"
                    android:layout_height="match_parent"
                    android:text="Edit"
                    android:background="#205E7A"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button5"
                    android:layout_width="185dp"
                    android:layout_height="match_parent"
                    android:text="JavaFP"
                    android:background="#205E7A"/>
                <Button
                    android:id="@+id/button55"
                    android:layout_width="185dp"
                    android:layout_height="match_parent"
                    android:text="Edit"
                    android:background="#205E7A"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button6"
                    android:layout_width="185dp"
                    android:layout_height="match_parent"
                    android:text="JavaHTP"
                    android:background="#205E7A"/>
                <Button
                    android:id="@+id/button66"
                    android:layout_width="185dp"
                    android:layout_height="match_parent"
                    android:text="Edit"
                    android:background="#205E7A"/>
            </LinearLayout>
            <Button
                android:id="@+id/buttoncleartags"
                android:layout_width="370dp"
                android:layout_height="match_parent"
                android:text="Clear tags"
                android:gravity="center"
                android:background="#205E7A"/>
        </LinearLayout>
    </ScrollView>




</RelativeLayout>


